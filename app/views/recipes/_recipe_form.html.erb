
<%= form_with model: recipe do |form| %>
  <div class="card">
    <div class="card-body">
      <%= form.label :name, class: "form-label" %><br>
      <%= form.text_field :name, class: "form-control", placeholder: "Enter recipe name" %>
      <% recipe.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
      <% end %>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %><br>
    <%= form.text_area :description, class: "form-control", rows: 5, placeholder: "Enter recipe description" %>
    <% recipe.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :difficulty, class: "form-label" %><br>

    <%= form.radio_button :difficulty, 'beginner' %>
    <%= form.label :difficulty, "This is a beginner-friendly recipe!" %><br>

    <%= form.radio_button :difficulty, 'intermediate' %>
    <%= form.label :difficulty, "This is an intermediate recipe!" %><br>

    <%= form.radio_button :difficulty, 'advanced' %>
    <%= form.label :difficulty, "This is an advanced recipe!" %><br>

    <%= form.radio_button :difficulty, 'expert' %>
    <%= form.label :difficulty, "This is a chef-level recipe!" %><br><br>

    <% recipe.errors.full_messages_for(:difficulty).each do |message| %>
      <div><%= message %></div>
    <% end %>

    <%= form.label :photo %> <br>
    <%= form.file_field :photo %> <br>

  </div>
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<%end%>

